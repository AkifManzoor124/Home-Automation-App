<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="e.akifmanzoor.homeautomation.MainActivity">

    <TextView
        android:id="@+id/humidText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Humidity: "
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView" />

    <TextView
        android:id="@+id/tempText"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Temperature: "
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/humidText"
        app:layout_constraintStart_toStartOf="@+id/humidText" />

    <TextView
        android:id="@+id/humidDisplayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="8dp"
        android:text="-"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/humidText"
        app:layout_constraintStart_toEndOf="@+id/humidText"
        app:layout_constraintTop_toTopOf="@+id/humidText"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tempDisplayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:text="-"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/tempText"
        app:layout_constraintStart_toEndOf="@+id/tempText"
        app:layout_constraintTop_toTopOf="@+id/tempText"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/syncBtn"
        android:layout_width="147dp"
        android:layout_height="57dp"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="sync"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Photoresistor:"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.259" />

    <TextView
        android:id="@+id/ldsDisplayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="-"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tempHumidSensorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Temp/Humid Sensor: "
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/PhotoResistorTextView"
        app:layout_constraintEnd_toEndOf="@+id/PhotoResistorTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/PhotoResistorTextView" />

    <TextView
        android:id="@+id/PhotoResistorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="156dp"
        android:layout_marginStart="20dp"
        android:text="PhotoResistor: "
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tempHumidDisplayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="8dp"
        android:text="-"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/tempHumidSensorTextView"
        app:layout_constraintEnd_toEndOf="@+id/PhotoResistorDisplayText"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tempHumidSensorTextView"
        app:layout_constraintTop_toTopOf="@+id/tempHumidSensorTextView"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/PhotoResistorDisplayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:text="-"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/PhotoResistorTextView"
        app:layout_constraintStart_toEndOf="@+id/PhotoResistorTextView"
        app:layout_constraintTop_toTopOf="@+id/PhotoResistorTextView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/desyncBtn"
        android:layout_width="147dp"
        android:layout_height="57dp"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="12dp"
        android:text="deSync"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.851"
        app:layout_constraintStart_toEndOf="@+id/syncBtn" />

</android.support.constraint.ConstraintLayout>

